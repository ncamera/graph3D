{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "outDir": "./dist"
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}
